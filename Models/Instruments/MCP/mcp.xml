	<!-- ANIMATIONS -->
	<animation>
		<name>Power on/off</name>
		<type>select</type>
		<object-name>ScreenOff</object-name>
		<condition>
			<less-than>
				<property>/systems/electrical/outputs/autopilot</property>
				<value>15</value>
			</less-than>
		</condition>
	</animation>

	<animation>
		<name>Course 1 knob pick</name>
		<type>pick</type>
		<object-name>CRS1Knob</object-name>
		<action>
			<button>0</button>
			<button>3</button>
			<repeatable type="bool">true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/nav[0]/radials/selected-deg</property>
				<step type="double">1</step>
			</binding>
			<binding>
				<condition>
					<greater-than>
						<property>instrumentation/nav[0]/radials/selected-deg</property>
						<value>360</value>
					</greater-than>
				</condition>
				<command>property-assign</command>
				<property>instrumentation/nav[0]/radials/selected-deg</property>
				<value>1</value>
			</binding>
		</action>
		<action>
			<button>1</button>
			<button>4</button>
			<repeatable type="bool">true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/nav[0]/radials/selected-deg</property>
				<step type="double">-1</step>
			</binding>
			<binding>
				<condition>
					<less-than-equals>
						<property>instrumentation/nav[0]/radials/selected-deg</property>
						<value>0</value>
					</less-than-equals>
				</condition>
				<command>property-assign</command>
				<property>instrumentation/nav[0]/radials/selected-deg</property>
				<value>360</value>
			</binding>
		</action>
	</animation>
