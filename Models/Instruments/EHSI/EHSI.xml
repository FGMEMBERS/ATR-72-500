<?xml version="1.0" encoding="UTF-8" ?>

<!-- Sikorsky S-76 EHSI -->
<!-- By Syd Adams -->

<PropertyList>

	<path>ehsi.ac</path>

	<!-- ANIMATIONS -->
	<animation>
		<name>Power on/off</name>
		<type>select</type>
		<object-name>Off</object-name>
		<condition>
			<less-than>
				<property>systems/electrical/outputs/efis</property>
				<value>15</value>
			</less-than>
		</condition>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>EHSI.hdg-bug</object-name>
		<property>autopilot/internal/fdm-heading-bug-error-deg</property>
		<axis>
			<x>-1.0</x>
			<y>0</y>
			<z>0.0</z>
		</axis>
		<center>
			<x-m>0.0</x-m>
			<y-m>0.0</y-m>
			<z-m>0.007</z-m>
		</center>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>EHSI.compass</object-name>
		<property>orientation/heading-magnetic-deg</property>
		<axis>
			<x>1.0</x>
			<y>0</y>
			<z>0.0</z>
		</axis>
		<center>
			<x-m>0.0</x-m>
			<y-m>0.0</y-m>
			<z-m>0.007</z-m>
		</center>
	</animation>

	<!-- NAV1 course -->
	<animation>
		<type>rotate</type>
		<object-name>EHSI.crsneedle</object-name>
		<object-name>EHSI.crsneedle.1</object-name>
		<property>orientation/heading-magnetic-deg</property>
		<axis>
			<x>1.0</x>
			<y>0</y>
			<z>0.0</z>
		</axis>
		<center>
			<x-m>0.0</x-m>
			<y-m>0.0</y-m>
			<z-m>0.007</z-m>
		</center>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>EHSI.crsneedle</object-name>
		<object-name>EHSI.crsneedle.1</object-name>
		<property>instrumentation/nav[0]/radials/selected-deg</property>
		<axis>
			<x>-1.0</x>
			<y>0</y>
			<z>0.0</z>
		</axis>
		<center>
			<x-m>0.0</x-m>
			<y-m>0.0</y-m>
			<z-m>0.007</z-m>
		</center>
	</animation>

	<animation>
		<type>translate</type>
		<object-name>EHSI.crsneedle.1</object-name>
		<property>instrumentation/nav[0]/heading-needle-deflection</property>
		<interpolation>
			<entry><ind>-999.0</ind><dep>-0.02</dep></entry>
			<entry><ind>-10.0</ind><dep>-0.02</dep></entry>
			<entry><ind>0.0</ind><dep>0.0</dep></entry>
			<entry><ind>10.0</ind><dep>0.02</dep></entry>
			<entry><ind>999.0</ind><dep>0.02</dep></entry>
		</interpolation>
		<axis>
			<x>0</x>
			<y>1.0</y>
			<z>0.0</z>
		</axis>
		<center>
			<x-m>0.0</x-m>
			<y-m>0.0</y-m>
			<z-m>0.007</z-m>
		</center>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>EHSI.vsi</object-name>
		<property>autopilot/internal/vert-speed-fpm</property>
		<interpolation>
			<entry><ind>-3000.0</ind><dep>-31.0</dep></entry>
			<entry><ind>-2000.0</ind><dep>-24.0</dep></entry>
			<entry><ind>-1000.0</ind><dep>-17.50</dep></entry>
			<entry><ind>0.0</ind><dep>0.0</dep></entry>
			<entry><ind>1000.0</ind><dep>17.50</dep></entry>
			<entry><ind>2000.0</ind><dep>24.0</dep></entry>
			<entry><ind>3000.0</ind><dep>31.0</dep></entry>
		</interpolation>
		<axis>
			<x>-1.0</x>
			<y>0</y>
			<z>0.0</z>
		</axis>
		<center>
			<x-m>0.0</x-m>
			<y-m>0.104</y-m>
			<z-m>0.007</z-m>
		</center>
	</animation>

	<animation>
		<type>textranslate</type>
		<object-name>EHSI.crs1</object-name>
		<property>instrumentation/nav[0]/radials/selected-deg</property>
		<factor>0.001</factor>
		<step>100</step>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>textranslate</type>
		<object-name>EHSI.crs2</object-name>
		<property>instrumentation/nav[0]/radials/selected-deg</property>
		<factor>0.01</factor>
		<step>10</step>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>textranslate</type>
		<object-name>EHSI.crs3</object-name>
		<property>instrumentation/nav[0]/radials/selected-deg</property>
		<factor>0.1</factor>
		<step>1</step>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>

	<!-- Heading bug -->
	<animation>
		<type>textranslate</type>
		<object-name>EHSI.hdg1</object-name>
		<property>autopilot/settings/heading-bug-deg</property>
		<factor>0.001</factor>
		<step>100</step>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>textranslate</type>
		<object-name>EHSI.hdg2</object-name>
		<property>autopilot/settings/heading-bug-deg</property>
		<factor>0.01</factor>
		<step>10</step>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>textranslate</type>
		<object-name>EHSI.hdg3</object-name>
		<property>autopilot/settings/heading-bug-deg</property>
		<factor>0.1</factor>
		<step>1</step>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>

	<!-- Groundspeed -->
	<animation>
		<type>textranslate</type>
		<object-name>EHSI.gsp1</object-name>
		<property>velocities/groundspeed-kt</property>
		<factor>0.001</factor>
		<step>100</step>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>textranslate</type>
		<object-name>EHSI.gsp2</object-name>
		<property>velocities/groundspeed-kt</property>
		<factor>0.01</factor>
		<step>10</step>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>textranslate</type>
		<object-name>EHSI.gsp3</object-name>
		<property>velocities/groundspeed-kt</property>
		<factor>0.1</factor>
		<step>1</step>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>

</PropertyList>
